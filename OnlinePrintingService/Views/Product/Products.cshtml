@model List<OnlinePrintingService.Models.Product>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Products</title>
    <style>
        .headText {
            font-size: 3rem;
            font-weight: bold;
            margin-left: 150px;
            margin-top: 80px;
            color: #febe19;
        }

        .table-sty {
            width: 70%;
            margin-top: 30px;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>
<body>

    




    <h1 class="headText" style="margin-left:300px;">Products List</h1>
    <div>
        <table class="table table-sty ">
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
               
                <th>Price</th>
                <th>Delete</th>
                

            </tr>

            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                
                    <td>@product.Price</td>
                    <td>
                        <input type="button"
                               value="Delete"
                                onclick="location.href= '@Url.Action("removeProduct", "Product", new { ProductID = @product.ProductID })' " 
                               
                               />
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>
