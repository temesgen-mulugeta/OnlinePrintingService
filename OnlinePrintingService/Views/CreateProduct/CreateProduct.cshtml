@model OnlinePrintingService.ViewModel.CreateProductViewModel
@{
     Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateProduct</title>
    <link rel="stylesheet" href="../StyleSheets/Signup.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="../Images/favicon.png" />
    <style>
        .textInput {
            margin-top: 15px;
        }
    </style>
</head>


<body>
    <div class="signup__container">
        <div class="container__child signup__thumbnail">
            <img ID="Image1" runat="server" src="../Images/createPrd.jpg" />

        </div>

        <div class="signup-form container__child" style=" width: 18rem;">
            <div class="card-body">

                <div>
                    <h1 style="margin-top:-30px; margin-bottom:30px; font-weight:bold">Create Product</h1>
                    @using (Html.BeginForm("CreateProduct", "CreateProduct", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()


                        @Html.AntiForgeryToken()
                        <div class="form-row textInput">
                            <div class="form-group">

                                @Html.TextBoxFor(va => va.ProductName, new { placeholder = "Product Name", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.ProductName)

                            </div>
                        </div>

                        <div class="form-row textInput">
                            <div class="form-group">

                                @Html.TextBoxFor(va => va.ProductSize, new { placeholder = "Product Size", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.ProductSize)

                            </div>
                        </div>
                        <div class="form-row textInput">
                            <div class="form-group">

                                @Html.TextBoxFor(va => va.Price, new { placeholder = "Product Price", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.Price)

                            </div>
                        </div>

                        @Html.ValidationSummary()
                        <div style="display:flex; ">
                            <button type="submit" class="btn btn-success" style="background-color: #212025;color:white; font-weight:500;border:none">Add Product</button>

                        </div>

                    }

                </div>



            </div>
        </div>
    </div>


</body>
</html>


