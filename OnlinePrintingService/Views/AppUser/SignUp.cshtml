@model OnlinePrintingService.ViewModel.SignUpViewModel
@{
    ViewBag.Title = "SignUp";
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>Adey Printing | Signup</title>
    <link rel="stylesheet" href="../StyleSheets/Signup.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="../Images/favicon.png" />
    <style>
        .textInput{
            margin-top:15px;
        }
    </style>
</head>

<body>
    <div class="signup__container">
        <div class="container__child signup__thumbnail">
            <img ID="Image1" runat="server" src="../Images/signup.jpg" />

        </div>

        <div class="signup-form container__child" style=" width: 18rem;">
            <div class="card-body">

                <div>
                    <h1 style="margin-top:-30px; margin-bottom:30px; font-weight:bold">Sign Up</h1>
                    @using (Html.BeginForm("SignUp", "AppUser", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-row textInput">
                            <div class="form-group">

                                @Html.TextBoxFor(va => va.FirstName, new { placeholder = "First Name", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.FirstName)

                            </div>
                        </div>
                        <div class="form-row textInput">
                            <div class="form-group">

                                @Html.TextBoxFor(va => va.LastName, new { placeholder = "Last Name", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.LastName)

                            </div>
                        </div>
                        

                        <div class="form-row textInput">
                            <div class="form-group">

                                @Html.TextBoxFor(va => va.Email, new { placeholder = "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.Email)

                            </div>
                        </div>
                        <div class="form-row textInput">
                            <div class="form-group">

                                @Html.TextBoxFor(va => va.PhoneNumber, new { placeholder = "Phone Number", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.PhoneNumber)

                            </div>
                        </div>

                        <div class="form-row textInput">
                            <div class="form-group">

                                @Html.TextBoxFor(va => va.Password, new { placeholder = "Password", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.Password)

                            </div>
                        </div>
                        <div class="form-row textInput">
                            <div class="form-group">

                                @Html.TextBoxFor(va => va.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.ConfirmPassword)

                            </div>
                        </div>
                        @Html.ValidationSummary()
                        <div style="display:flex; ">
                            <button type="submit" class="btn btn-success" style="background-color: #212025;color:white; font-weight:500;border:none">Register</button>
                            <a href="../AppUser/Login" style="align-self:flex-end; margin-left:10px;text-decoration:none; color:darkgrey;">I have an account</a>
                        </div>

                    }

                </div>
             
                

            </div>
        </div>
    </div>


</body>