@model OnlinePrintingService.ViewModel.SignUpViewModel
@{
    ViewBag.Title = "SignUp";
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>Adey Printing | Signup</title>
    <link rel="stylesheet" href="../StyleSheets/Signup.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="../Images/favicon.png" />
</head>

<body>
    <div class="signup__container">
        <div class="container__child signup__thumbnail">
            <img ID="Image1" runat="server" src="~/Images/signup.jpg" />

        </div>

        <div class="signup-form container__child" style=" width: 18rem;">
            <div class="card-body">

                <div>
                    <h1 style="margin-top:-20px;">Sign Up</h1>
                    @using (Html.BeginForm("SignUp", "AppUser", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-row">
                            <div class="form-group">
                                @Html.LabelFor(va => va.Email, new { @class = "form-control" })
                                @Html.TextBoxFor(va => va.Email, new { placeholder = "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.Email)

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                @Html.LabelFor(va => va.PhoneNumber, new { @class = "form-control" })
                                @Html.TextBoxFor(va => va.PhoneNumber, new { placeholder = "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.PhoneNumber)

                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                @Html.LabelFor(va => va.Password, new { @class = "form-control" })
                                @Html.TextBoxFor(va => va.Password, new { placeholder = "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.Password)

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                @Html.LabelFor(va => va.ConfirmPassword, new { @class = "form-control" })
                                @Html.TextBoxFor(va => va.ConfirmPassword, new { placeholder = "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(va => va.ConfirmPassword)

                            </div>
                        </div>
                    }
                    
                    </div>

                </div>
        </div>
    </div>


</body>