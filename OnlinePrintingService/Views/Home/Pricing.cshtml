@model List<OnlinePrintingService.Models.Product>
@{
    ViewBag.Title = "Pricing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Adey Pricing</title>
    <link href="../StyleSheets/Pricing.css" rel="stylesheet" type="text/css" />
    <style>
        .headTextt {
            font-size: 3rem;
            font-weight: bold;
            margin-left: 150px;
            margin-top: 80px;
            color: #febe19;
        }

    </style>
</head>
<body>

    <div>
        <h1 class="headTextt" style="margin-left:300px;">Product Pricing</h1>
        <table class="table table-sty ">
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>

                <th>Price</th>
                <th>Delete</th>


            </tr>

            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>

                    <td>@product.Price</td>
                    
                </tr>
            }

        </table>
    </div>
</body>

