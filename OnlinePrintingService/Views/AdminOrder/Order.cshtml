
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Order</title>
</head>
<body>


    <h1 class="headText" style="margin-left:300px;">Order List</h1>
    <div>
        <table class="table table-sty ">
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Product Size</th>
                <th>Image</th>


            </tr>

            @foreach (var Order in ViewBag.orders)
            {
                <tr>
                    <td>@Order.OrderId</td>
                    <td>@Order.CustomerName</td>
                    <td>@Order.ProductName</td>
                    <td>@Order.ProductSize</td>

                    <td>
                        <input type="button"
                               value="Delete"
                               onclick="location.href= '@Url.Action("removeProduct", "Product", new { ProductID = @Order.ProductID })' " />
                    </td>
                </tr>
             }

        </table>
    </div>
</body>
</html>
