@model OnlinePrintingService.ViewModel.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Login to Adey </title>
    <link rel="stylesheet" href="~/StyleSheets/Signup.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="../Images/favicon.png" />
    <link href="Content/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="signup__container">
        <div class="container__child signup__thumbnail">
            <img ID="Image2" runat="server" src="~/Images/signin.jpg" />

        </div>

        <div class="signup-form container__child" style="width: 18rem;">
            <div class="card-body">

                <div>

                    <h1 style="margin-top:-30px; margin-bottom:30px; font-weight:bold">Sign In</h1>
                    <div>
                        <div>
                            @using (Html.BeginForm("Login", "AppUser", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-row textInput">
                                    <div class="form-group">

                                        @Html.TextBoxFor(va => va.UserName, new { placeholder = "User Name", @class = "form-control" })
                                        @Html.ValidationMessageFor(va => va.UserName)

                                    </div>
                                </div>



                                <div class="form-row textInput" style="margin-top:15px;">
                                    <div class="form-group">

                                        @Html.TextBoxFor(va => va.Password, new { placeholder = "Password", @class = "form-control" })
                                        @Html.ValidationMessageFor(va => va.Password)

                                    </div>
                                </div>

                                @Html.ValidationSummary()
                                <div style="display:flex; ">
                                    <button type="submit" class="btn btn-success" style="background-color: #febe19;color:black; font-weight:500;border:none">Login</button>
                                    <a href="../AppUser/SignUp" style="align-self:flex-end; margin-left:10px;text-decoration:none; color:darkgrey;">Create an account</a>
                                </div>

                            }

                        </div>



                    </div>
                </div>
            </div>
        </div>



</body>

</html>